@model Project_6.Models.Manager





<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 uxa-form-group mt-5">
            <!-- Avatar Image with Edit Button -->
            <div class="uxa-user-avatar" style="position: relative;">
                <img src="@Model.ProfileImage" alt="User avatar" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
                <button class="edit-btn" data-bs-toggle="modal" data-bs-target="#imageUploadModal">
                    <i class="fas fa-edit"></i> Edit
                </button>
            </div>

            <!-- Edit Profile Form with enctype for file upload -->
            <form asp-action="ManagerEditProfileHandle" method="post" enctype="multipart/form-data" class="mt-5 mb-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input type="text" class="form-control" name="Email" value="@Model.Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                @* <div class="form-group"> *@
                @*     <label asp-for="Position">Position:</label> *@
                @*     <input type="text" class="form-control" name="Position" value="@Model.Position" required /> *@
                @* </div> *@

                <div class="pt-1 mb-4 editbtn">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Save Changes</button>
                </div>
                <!-- Modal for image upload -->
                <div class="modal fade" id="imageUploadModal" tabindex="-1" aria-labelledby="imageUploadModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="imageUploadModalLabel">Change Profile Picture</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <input type="file" class="form-control" name="ProfileImage" accept="image/*" />
                            </div>
                            <div class="modal-footer">
                                <button type="submit" name="ProfileImage" class="btn btn-primary">Save changes</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>

